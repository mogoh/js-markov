{
    "name": "ts-markov",
    "version": "0.0.2",
    "description": "A TypeScript library to help you create Markov Chains",
    "main": "dist/MarkovString.js",
    "type": "module",
    "types": "dist/MarkovString.d.ts",
    "scripts": {
        "clean": "rm -r dist/*; rm -r temp/*",
        "eslint": "eslint src --ext .ts",
        "rollup": "yarn rollup_development && yarn rollup_production",
        "rollup_prod": "rollup --config --environment BUILD:production",
        "rollup_dev": "rollup --config",
        "tsc": "tsc",
        "test_single_state": "yarn node ./temp/test/single-state.js",
        "test_multiple_states": "yarn node ./temp/test/multiple-states.js",
        "test_all": "yarn tsc; yarn test_single_state; yarn test_multiple_states"
    },
    "files": [
        "dist/*"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/mogoh/ts-markov.git"
    },
    "keywords": [
        "simple",
        "markov",
        "chain"
    ],
    "author": "Leonhard KÃ¼per",
    "license": "MIT",
    "devDependencies": {
        "@rollup/plugin-node-resolve": "*",
        "@rollup/plugin-typescript": "*",
        "@types/node": "*",
        "@typescript-eslint/eslint-plugin": "*",
        "@typescript-eslint/parser": "*",
        "eslint": "*",
        "eslint-plugin-node": "*",
        "rollup": "*",
        "rollup-plugin-terser": "*",
        "ts-node": "*",
        "typescript": "*"
    }
}
